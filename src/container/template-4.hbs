<header class="header row g-0">

    <div class="col-3">
        {{> logo}}
    </div>

    <nav class="header_nav col-9 ">

        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}}</p>
        <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
</div>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</div>

<div class="actions">
    {{#each actions}}
    <div class="action">
        <h3 class="heading">{{heading}}</h3>
        <a href="{{url}}" class="button action_button">{{text}}</a>
    </div>
    {{/each}}
</div>



<footer class="page_block">
    <div class="row g-0 footer">
        <div class="col-3">
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>

        {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
        {{/each}}
    </div>
</footer>